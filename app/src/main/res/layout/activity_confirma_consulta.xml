<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo"
    tools:context=".ConfirmaConsultaActivity">


    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txvTitulo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:src="@drawable/ic_back_dark" />

    <TextView
        android:id="@+id/txvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="21dp"
        android:theme="@style/TextViewTheme"
        android:textColor="@color/cinza"
        android:textSize="25sp"
        android:text="14 de Janeiro 2018" />

    <TextView
        android:id="@+id/txvSubTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txvTitulo"
        android:layout_marginStart="90dp"
        android:text="Quarta-Feira, 14:30"
        android:textColor="@color/cinza"
        android:textSize="18sp"
        android:theme="@style/TextViewTheme" />

    <ImageView
        android:id="@+id/imgMedico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="98dp"
        android:src="@mipmap/medico2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Dr. Fulano de Tal"
        android:textColor="@color/cinza"
        android:textSize="20sp"
        android:theme="@style/TextViewTheme" />
</RelativeLayout>